                    <Button Name="pc2" HorizontalAlignment="Left" Width="70" Height="80"  Click="pc1_Click" Padding="0" Background="Green" BorderThickness="0" BorderBrush="DarkGray" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <CompositeTransform TranslateX="{Binding PaletteItemTranslateX}"/>
                        </Button.RenderTransform>
                    </Button>
                    <Button Name="pc3" HorizontalAlignment="Left" Width="70" Height="80"  Click="pc1_Click" Padding="0" Background="Blue" BorderThickness="0" BorderBrush="DarkGray" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <CompositeTransform TranslateX="{Binding PaletteItemTranslateX}"/>
                        </Button.RenderTransform>
                    </Button>
                    <Button Name="pc4" HorizontalAlignment="Left" Width="70" Height="80"  Click="pc1_Click" Padding="0" Background="Red"  BorderThickness="0" BorderBrush="DarkGray" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <CompositeTransform TranslateX="{Binding PaletteItemTranslateX}"/>
                        </Button.RenderTransform>
                    </Button>
                    <Button Name="pc5" HorizontalAlignment="Left" Width="70" Height="80"  Click="pc1_Click" Padding="0" Background="Red"  BorderThickness="0" BorderBrush="DarkGray" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <CompositeTransform TranslateX="{Binding PaletteItemTranslateX}"/>
                        </Button.RenderTransform>
                    </Button>
                    <Button Name="pc6" HorizontalAlignment="Left" Width="70" Height="80"  Click="pc1_Click" Padding="0" Background="Red"  BorderThickness="0" BorderBrush="DarkGray" RenderTransformOrigin="0.5,0.5">
                        <Button.RenderTransform>
                            <CompositeTransform TranslateX="{Binding PaletteItemTranslateX}"/>
                        </Button.RenderTransform>
                    </Button>
                </StackPanel>
            </Border>

            <Border x:Name="BorderDrawboard" CornerRadius="1" BorderThickness="0" Grid.Column="1" Margin="0,0,0,0"  VerticalAlignment="Stretch">
                <StackPanel x:Name="StackPanelDrawboard" 
                            Orientation="Vertical" 
                            VerticalAlignment="Center" 
                            Margin="0,0,0,0" 
                            HorizontalAlignment="Stretch">

                    <Border BorderBrush="DarkGray" BorderThickness="2" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                Margin="0,0">
                        <Grid Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center"  MouseLeave="Grid_MouseLeave_1" MouseMove="Grid_MouseMove_1">
                            <!--<Rectangle Name="mainImgBck" Width="400" Height="400" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"></Rectangle>-->
                            <Image Name="ImageMain" Visibility="Visible" Width="560" Height="460"  Stretch="Fill" Source="../Assets/groups/3/lres/reduced/coccodrillo colore.png"  HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="1"></Image>
                            <Image Name="ImageTest" Visibility="Collapsed" Width="560" Height="460"  Stretch="Fill"  HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="1"></Image>
                            <InkPresenter  Name="ink" Width="560" Height="460" HorizontalAlignment="Center"  VerticalAlignment="Center" Background="Transparent" />
                        </Grid>
                    </Border>
                    <Canvas Name="timerCanvas" Height="10" Margin="30,0,30,10" Width="565">
                        <Canvas.Background>
                            <LinearGradientBrush EndPoint="0,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF0606" Offset="1"/>
                                <GradientStop Color="#FF46FF00"/>
                                <GradientStop Color="#FFEEE300" Offset="0.279"/>
                            </LinearGradientBrush>
                        </Canvas.Background>
                        <Ellipse Name="timerEllipse"
                                         Margin="550,-2,0,0" 
                                         Width="15" Height="15">
                            <Ellipse.Fill>
                                <RadialGradientBrush>
                                    <GradientStop Color="#FFCBCBCB" Offset="0"/>
                                    <GradientStop Color="#FF636363" Offset="1"/>
                                </RadialGradientBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Canvas>
                </StackPanel>
            </Border>

            <TextBlock x:Name="TextBlockCountDown" FontFamily="..\Fonts\CURLZ___.TTF#Curlz MT" Foreground="Lime" Grid.Column="1" Text="1" FontSize="230" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.625"/>

        </Grid>
    </Grid>
</phone:PhoneApplicationPage>